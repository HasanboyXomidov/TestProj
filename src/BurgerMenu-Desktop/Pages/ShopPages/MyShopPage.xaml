<Page x:Class="BurgerMenu_Desktop.Pages.MyShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BurgerMenu_Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Transparent"
      Loaded="Page_Loaded"
      Title="MyShopPage">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Left"
            
            VerticalAlignment="Center">
                <Label Content="Магазин"
           FontWeight="SemiBold"
           FontSize="16"                   
        VerticalContentAlignment="Center"
        Foreground="{DynamicResource RegisterBackgroudnColor}"></Label>
               
            </StackPanel>
            <ScrollViewer Grid.Row="1">
            <Border Background="{DynamicResource RegisterBackgroudnColor}"
                    CornerRadius="8">
            <WrapPanel Margin="15 10"                                              
                       x:Name="WpShops">

            </WrapPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
